<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_pop_shop">

    <ImageView
        android:id="@+id/pop_header"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/pop_header"
        app:layout_constraintLeft_toRightOf="@id/pop_header">

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥12.5"
            android:textColor="#FF190E"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/text_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量0.1kg"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/sp_20"
        android:text="口味"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pop_header" />

    <LinearLayout
        android:id="@+id/ll_shu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pop_header"></LinearLayout>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/sp_20"
        android:text="数量"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_shu" />

    <com.jy.login.widget.NumberSelect
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_change"
        android:layout_marginRight="@dimen/sp_20"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/size"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_true_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/sp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/sp_20"
        android:background="@drawable/shape7"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>