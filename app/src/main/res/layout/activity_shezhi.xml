<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".ui.activity.ShezhiActivity">

    <ImageView
        android:id="@+id/img_fan"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_34"
        android:src="@mipmap/fanhuia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_33"
        android:text="系统设置"
        android:textColor="#333333"
        android:textSize="@dimen/sp_22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_26"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_114"
            android:layout_marginTop="@dimen/dp_40"
            android:text="羊驼小米尼"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_113"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/shape2"
            android:gravity="center"
            android:text="VIP会员"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            app:layout_constraintTop_toBottomOf="@id/img">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_weight="1"
                android:text="换绑手机"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_25"
                android:scaleType="centerCrop"
                android:src="@mipmap/jiantou_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/phone" />


        <LinearLayout
            android:id="@+id/anquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@id/phone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_weight="1"
                android:text="安全设置"
                android:textColor="#333333"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_25"
                android:scaleType="centerCrop"
                android:src="@mipmap/jiantou_right" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_main_logout"
            android:layout_width="@dimen/dp_324"
            android:layout_height="@dimen/dp_44"
            android:text="退出登录"
            android:textSize="@dimen/sp_20"
            android:textColor="#333333"
            android:background="@drawable/tuichu_shape"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>